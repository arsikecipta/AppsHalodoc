<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/bottomSheetContainer"
    android:background="@drawable/bottom_sheet_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Address_tokes">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_slider"
        android:layout_width="80dp"
        android:layout_marginTop="20dp"
        android:layout_height="5dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/color4">
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/judul"
        android:textSize="18sp"
        android:fontFamily="@font/googlesansbold"
        android:text="Pilih Alamat"
        ></TextView>

    <EditText
        android:id="@+id/et_alamat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/ic_search2"
        android:drawablePadding="12dp"
        android:ems="10"
        android:hint="Cari Alamat"
        android:fontFamily="@font/googlesansmedium"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColorHint="@color/judul"
        android:textSize="16dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardriwayat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineAmbientShadowColor="#424242"
        android:outlineSpotShadowColor="#424242"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_margin="20dp"
                    android:src="@drawable/ic_map">
                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilih Menggunakan Peta"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="80dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/googlesansregular"
                    android:textColor="@color/background_all">
                </TextView>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_below="@+id/card_artikel3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#C4C4C4">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_mylocation">
        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"

            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lokasimu saat ini"
                android:layout_marginTop="8dp"
                android:layout_marginRight="20dp"
                android:textSize="16sp"
                android:fontFamily="@font/googlesansregular"
                android:textColor="@color/background_all">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jl. Mess No.52b, Kebon Melati"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="20dp"
                android:textSize="14sp"
                android:fontFamily="@font/googlesansregular"
                android:textColor="@color/deskripsi">
            </TextView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/card_artikel3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="110dp"
        android:layout_marginLeft="75dp"
        android:background="#C4C4C4">
    </LinearLayout>

</LinearLayout>