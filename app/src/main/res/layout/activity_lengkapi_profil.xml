<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    tools:context=".LengkapiProfil">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/shapetopik"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_informasidasar"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:text="Informasi dasar"
                android:textSize="18sp"
                android:fontFamily="@font/googlesansmedium"
                android:textColor="@color/judul"

                ></TextView>
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:id="@+id/text_nl"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:text="@string/text_nama_lengkap"
            android:fontFamily="@font/googlesansregular"
            android:textColor="@color/deskripsi"
            android:layout_marginBottom="10dp"
            android:textSize="16sp">
        </TextView>

        <EditText
            android:id="@+id/et_nama_lengkap"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:ems="10"
            android:textSize="16sp"
           android:hint="Nama Lengkap Anda"
            android:background="@drawable/custom_input"
            android:drawablePadding="12dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:fontFamily="@font/googlesansregular"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Tanggal lahir"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:textStyle="bold"
            ></TextView>
        <Button
            android:id="@+id/datepicker_ttl"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="20dp"
            android:hint="MM/DD/YY"
            android:textSize="16sp"
            style="?android:spinnerStyle"
            android:background="@drawable/bg_spinner"
            android:layout_marginLeft="20dp"
            android:onClick="openDatePicker"
            ></Button>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_jeniskelamin"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Jenis Kelamin"
            android:textSize="16sp"
            android:fontFamily="@font/googlesansregular"
            android:textColor="@color/deskripsi"
            android:textStyle="bold"
            ></TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"

            android:orientation="horizontal"
            >
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="60dp"

                android:orientation="horizontal"

                android:id="@+id/radioGroup">
                <RadioButton
                    android:id="@+id/lk"
                    android:layout_width="100dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:buttonTint="@color/background_all"
                    android:layout_marginLeft="20dp"
                    android:textSize="16sp"
                    android:text="Laki-laki"
                    android:fontFamily="@font/googlesansregular"
                    android:textColor="@color/deskripsi"
                    ></RadioButton>
                <RadioButton
                    android:id="@+id/pr"
                    android:layout_width="150dp"
                    android:layout_height="48dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="100dp"
                    android:text="Perempuan"
                    android:buttonTint="@color/background_all"
                    android:fontFamily="@font/googlesansregular"
                    android:textColor="@color/deskripsi"
                    android:textSize="16sp"
                    ></RadioButton>
            </RadioGroup>
        </LinearLayout>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"

            android:background="@color/shapetopik"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_informasi"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:text="Informasi Kontak"
                android:textSize="18sp"
                android:fontFamily="@font/googlesansmedium"
                android:textColor="@color/judul"

                ></TextView>
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_notelp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/googlesansregular"
            android:textColor="@color/deskripsi"
            android:layout_marginLeft="20dp"

            android:text="Nomor telepon"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            ></TextView>


        <EditText
            android:id="@+id/et_phone_number"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:ems="10"
            android:fontFamily="@font/googlesansregular"
            android:textColor="@color/deskripsi"
            android:editable="false"
            android:background="@drawable/custom_input"
            android:drawablePadding="12dp"

            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_email"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Email"
            android:fontFamily="@font/googlesansregular"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            ></TextView>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:ems="10"
            android:textSize="16sp"
            android:fontFamily="@font/googlesansregular"
            android:textColor="@color/deskripsi"
            android:background="@drawable/custom_input"
            android:drawablePadding="12dp"

            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"

            android:hint="Contoh : abc@gmail.com"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@color/shapetopik"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/text_informasi_persoanl"
                android:layout_marginTop="5dp"
                android:textSize="18sp"
                android:fontFamily="@font/googlesansmedium"
                android:textColor="@color/judul"
                android:layout_marginLeft="20dp"
                android:text="Informasi Personal"

                ></TextView>
        </FrameLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_bb"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Berat badan (kg)"
            android:textSize="16sp"
            android:fontFamily="@font/googlesansregular"
            android:textColor="@color/deskripsi"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            ></TextView>

        <EditText
            android:id="@+id/et_bb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:ems="10"
            android:textSize="16sp"

            android:fontFamily="@font/googlesansregular"
            android:textColor="@color/deskripsi"
            android:background="@drawable/custom_input"
            android:drawablePadding="12dp"
            android:inputType="number"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:hint="Contoh : 50"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_tb"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Tinggi badan (cm)"
            android:textSize="15sp"
            android:fontFamily="@font/googlesansregular"
            android:textColor="@color/deskripsi"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            ></TextView>

        <EditText
            android:id="@+id/et_tb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:ems="10"
            android:textSize="16sp"
            android:background="@drawable/custom_input"
            android:drawablePadding="12dp"
            android:inputType="number"
            android:fontFamily="@font/googlesansregular"
            android:textColor="@color/deskripsi"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:hint="Contoh : 170"
            />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/button_regis"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/judul"
                android:fontFamily="@font/googlesansmedium"


                android:text="Simpan"
                >
                ></Button>
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>
</ScrollView>
