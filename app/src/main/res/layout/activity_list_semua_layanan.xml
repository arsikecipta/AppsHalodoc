<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".ListSemuaLayanan">
    <androidx.cardview.widget.CardView
        android:id="@+id/frame_loc"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:elevation="2dp"
        >
        <TextView
            android:id="@+id/loc"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:text="Jalan Sukabirus">
        </TextView>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_location"
            ></ImageView>

        <ImageView
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="360dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_edit"/>
    </androidx.cardview.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/shapetopik"
            >
            <TextView
                android:id="@+id/nama_layananrs_semua"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="layanan"
                android:textSize="18dp"
                android:fontFamily="@font/googlesansbold"
                android:textColor="@color/judul"
                android:layout_margin="10dp"

                ></TextView>

        </FrameLayout>
        <TextView
            android:id="@+id/txt_penjelasanlay_semua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="layanan"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:fontFamily="@font/googlesansregular"
            android:textColor="@color/deskripsi"
            android:layout_marginTop="60dp"
            android:textSize="16dp"
            ></TextView>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec_layanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_margin="10dp"
        ></androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>