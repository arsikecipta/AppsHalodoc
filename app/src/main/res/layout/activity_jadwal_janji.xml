<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".Jadwal_janji">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/foto_layanan"
            android:layout_width="410dp"
            android:layout_height="200dp"
            android:background="#2d2d2d"
            android:scaleType="centerCrop"
            ></ImageView>
        <TextView
            android:id="@+id/layanan_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:text="Nama Layanan"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/jenis_layrs"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Jenis"
            android:textSize="15sp"></TextView>

        <TextView
            android:id="@+id/nama_rs_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:text="Nama Rs"
            android:layout_marginTop="5dp"
            android:textSize="18sp"></TextView>
        <TextView
            android:id="@+id/alamat_rs_lay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:text="Alamat Rs"
            android:layout_marginTop="5dp"
            android:textSize="18sp"></TextView>
        <TextView
            android:id="@+id/hargalay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:text="Harga Layanan"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="18sp"></TextView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:background="@color/background_text"
            >
            <TextView
                android:id="@+id/txt_pilihjadwal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:layout_gravity="left"
                android:text="Pilih tanggal dan waktu kunjungan"
                android:layout_marginTop="10dp"
                android:textSize="18sp"></TextView>
        </FrameLayout>


        <HorizontalScrollView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <RadioGroup
                    android:id="@+id/tanggal_janji"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/txt_tgl1"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="Senin 5 Juli"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/radio_selector2"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:button="@drawable/null_radio_button"
                        android:textColor="@drawable/radio_text_selector"
                        ></RadioButton>
                    <RadioButton
                        android:id="@+id/txt_tgl2"
                        android:layout_width="wrap_content"
                        android:layout_height="80dp"
                        android:text="Selasa 6 Juli"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/radio_selector"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:button="@drawable/null_radio_button"
                        android:textColor="@drawable/radio_text_selector"
                        ></RadioButton>
                    <RadioButton
                        android:id="@+id/txt_tgl3"
                        android:layout_width="100dp"
                        android:layout_height="80dp"
                        android:text="Rabu 7Juli"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/radio_selector"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:button="@drawable/null_radio_button"
                        android:textColor="@drawable/radio_text_selector"
                        ></RadioButton>
                </RadioGroup>
                <Button
                    android:id="@+id/tanggal_picker"
                    android:layout_width="70dp"
                    android:layout_height="80dp"
                    android:text="Pilih"
                    android:elevation="4dp"
                    android:textColor="@color/background_all"
                    android:background="@drawable/radio_selector"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    >
                </Button>
            </LinearLayout>
        </HorizontalScrollView>
        <TextView
            android:id="@+id/tanggal_fix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:text="Tanggal fix"
            android:layout_marginTop="5dp"
            android:textSize="14sp"></TextView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_expand"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="12dp"
            android:layout_marginRight="20dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_pagi"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_pagi"></ImageView>

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="15dp"
                    android:text="Pagi"
                    android:textAlignment="center"
                    android:textSize="18dp"></TextView>

                <Button
                    android:id="@+id/btn_expand"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="expandview"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/ic_arrow"></Button>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:layout_marginTop="1dp"
            android:id="@+id/layout_expand"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="360dp"
                android:orientation="horizontal"
                android:layout_height="70dp">
                <RadioGroup
                    android:layout_marginTop="10dp"
                    android:id="@+id/jam_janji"
                    android:layout_width="360dp"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/btn_7"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="07:00"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/radio_jam_selector"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:button="@drawable/null_jam_radio_button"
                        android:textColor="@drawable/radio_text_selector"
                        ></RadioButton>
                    <RadioButton
                        android:id="@+id/btn_8"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="08:00"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/radio_jam_selector"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:button="@drawable/null_jam_radio_button"
                        android:textColor="@drawable/radio_text_selector"
                        ></RadioButton>

                    <RadioButton
                        android:id="@+id/btn_9"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="09:00"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/radio_jam_selector"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:button="@drawable/null_jam_radio_button"
                        android:textColor="@drawable/radio_text_selector"
                        ></RadioButton>



                </RadioGroup>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView

            android:id="@+id/card_expand2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="12dp"
            android:layout_marginRight="20dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_malam"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_night"></ImageView>

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="15dp"
                    android:text="Malam"
                    android:textAlignment="center"
                    android:textSize="18dp"></TextView>

                <Button
                    android:id="@+id/btn_expand2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:contentDescription="expandview"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/ic_arrow"></Button>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:visibility="gone"
            android:layout_marginTop="1dp"
            android:id="@+id/layout_expand_malam"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
            <LinearLayout
                android:layout_width="350dp"
                android:orientation="horizontal"
                android:layout_height="70dp">
                <RadioGroup
                    android:layout_marginTop="10dp"
                    android:id="@+id/pilih_jam"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:orientation="horizontal"
                    >

                    <RadioButton
                        android:id="@+id/btn_18"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="18:00"
                        android:layout_marginHorizontal="8dp"
                        android:background="@drawable/radio_jam_selector"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:button="@drawable/null_jam_radio_button"
                        android:textColor="@drawable/radio_text_selector"
                        ></RadioButton>
                    <RadioButton
                        android:id="@+id/btn_19"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="19:00"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/radio_jam_selector"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:button="@drawable/null_jam_radio_button"
                        android:textColor="@drawable/radio_text_selector"
                        ></RadioButton>

                    <RadioButton
                        android:id="@+id/btn_20"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:text="20:00"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/radio_jam_selector"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:button="@drawable/null_jam_radio_button"
                        android:textColor="@drawable/radio_text_selector"
                        ></RadioButton>



                </RadioGroup>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <Button
            android:id="@+id/btn_jadwal_janji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Buat Janji"
            android:textColor="#838383"

            ></Button>
    </LinearLayout>
