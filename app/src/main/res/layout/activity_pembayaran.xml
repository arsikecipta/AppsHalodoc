<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Pembayaran">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_marginBottom="600dp"
            android:layout_height="725dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"

                    app:cardElevation="10dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="Janji Layanan"
                        android:textSize="18dp"
                        android:textStyle="bold"></TextView>


                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:layout_marginTop="60dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:text="Layanan"
                            android:textSize="16dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:text="Lokasi"
                            android:textSize="16dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:text="Tanggal"
                            android:textSize="16dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:text="Waktu"
                            android:textSize="16dp"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="70dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:text="Biaya"
                            android:textSize="16dp"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="10dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="60dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="1dp"
                            android:text=":"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="12dp"
                            android:text=":"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="11dp"
                            android:text=":"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="11dp"
                            android:text=":"
                            android:textStyle="bold"></TextView>


                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="11dp"
                            android:text=":"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="230dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="110dp"
                        android:layout_marginTop="60dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/nama_layanan_bayar"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:text="Nama layanan"
                            android:textSize="16dp"

                            ></TextView>

                        <TextView
                            android:id="@+id/namars_bayar"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:text="Nama rs"
                            android:textSize="16dp"></TextView>

                        <TextView
                            android:id="@+id/pembayaran_hari"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:text="hari"
                            android:textSize="16dp"></TextView>

                        <TextView
                            android:id="@+id/pembayaran_jam"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:text="jam"
                            android:textSize="16dp"></TextView>

                        <TextView
                            android:id="@+id/hargalay_bayar"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="20dp"
                            android:text="harga"
                            android:textSize="16dp"></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_below="@+id/card_artikel3"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"

                    android:background="@color/background_all">
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="210dp"

                    app:cardElevation="10dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Ringkasan pembayaran"
                        android:textSize="18dp"
                        android:textStyle="bold"></TextView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Biaya Layanan"
                            android:textStyle="bold"

                            android:textSize="16dp"
                            ></TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="FREE"
                            android:layout_marginLeft="50dp"
                            android:textSize="16dp"
                            ></TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_below="@+id/card_artikel3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="110dp"
                        android:background="#C4C4C4">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Biaya jasa medis"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            ></TextView>
                        <TextView
                            android:id="@+id/biayamedis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp100.000"
                            android:layout_marginLeft="50dp"
                            android:textSize="16dp"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/card_artikel3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="155dp"
                        android:background="#C4C4C4">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="165dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Total pembayaran"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            ></TextView>
                        <TextView
                            android:id="@+id/totalpembayaran"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Rp100.000"
                            android:layout_marginLeft="50dp"
                            android:textSize="16dp"
                            android:textStyle="bold"
                            ></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_below="@+id/card_artikel3"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"

                    android:background="@color/background_all">
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="330dp"
                    android:layout_marginBottom="100dp"
                    app:cardElevation="10dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="Metode pembayaran"
                        android:textSize="18dp"
                        android:textStyle="bold"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Saldo Halodoc"
                            android:textStyle="bold"
                            android:textSize="16dp"
                            ></TextView>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_check_grey"
                            android:layout_marginLeft="80dp"
                            android:textSize="16dp"
                            ></ImageView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="90dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Rp0"
                            android:textSize="16dp"
                            ></TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_below="@+id/card_artikel3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="120dp"
                        android:background="#C4C4C4">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="140dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Saldo Gopay"
                            android:textSize="16dp"
                            android:textStyle="bold"></TextView>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_check_green"
                            android:layout_marginLeft="80dp"
                            android:textSize="16dp"
                            ></ImageView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="170dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Rp500.000"
                            android:textSize="16dp"
                            ></TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_below="@+id/card_artikel3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="200dp"
                        android:background="#C4C4C4">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="220dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Pilihan Lainnya"
                            android:textSize="16dp"
                            android:textStyle="bold"></TextView>

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/ic_next"
                            android:textSize="16dp"></ImageView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="250dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Kartu kredit / Kartu debit"
                            android:textSize="16dp"
                            ></TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_below="@+id/card_artikel3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="200dp"
                        android:background="#C4C4C4">
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="-750dp"
            app:cardElevation="10dp"
            android:layout_height="90dp">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:text="Total Pembayaran"
                android:textStyle="bold"
                ></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/totalpembayaran_fix"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:text="Rp.0"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <Button
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/background_all"
                    android:text="Bayar"
                    android:textColor="@color/colorWhite"></Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>