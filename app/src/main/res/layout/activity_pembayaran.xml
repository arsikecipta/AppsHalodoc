<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Pembayaran">

        <ScrollView
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"

                    app:cardElevation="10dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:text="Janji Layanan"
                        android:fontFamily="@font/googlesansbold"
                        android:textSize="18dp"
                        android:textColor="@color/judul"
                        ></TextView>


                    <LinearLayout
                        android:layout_marginTop="60dp"
                        android:layout_width="110dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:textSize="16dp"
                            android:text="Layanan    :"
                            android:fontFamily="@font/googlesansmedium"
                            android:textColor="@color/judul"

                            ></TextView>
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:textSize="16dp"
                            android:text="Lokasi        :"
                            android:fontFamily="@font/googlesansmedium"
                            android:textColor="@color/judul"

                            ></TextView>
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:textSize="16dp"
                            android:text="Tanggal     :"
                            android:fontFamily="@font/googlesansmedium"
                            android:textColor="@color/judul"
                            ></TextView>
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:textSize="16dp"
                            android:text="Waktu        :"
                            android:fontFamily="@font/googlesansmedium"
                            android:textColor="@color/judul"

                            ></TextView>
                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:textSize="16dp"
                            android:text="Biaya          :"
                            android:fontFamily="@font/googlesansmedium"
                            android:textColor="@color/judul"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="60dp"
                        android:layout_width="230dp"
                        android:layout_height="150dp"
                        android:layout_marginLeft="110dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/nama_layanan_bayar"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:textSize="16dp"
                            android:text="Nama layanan"
                            android:fontFamily="@font/googlesansregular"
                            android:textColor="@color/deskripsi"
                            ></TextView>
                        <TextView
                            android:id="@+id/namars_bayar"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:textSize="16dp"
                            android:fontFamily="@font/googlesansregular"
                            android:textColor="@color/deskripsi"
                            android:text="Nama rs"
                            ></TextView>
                        <TextView
                            android:id="@+id/pembayaran_hari"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:textSize="16dp"
                            android:fontFamily="@font/googlesansregular"
                            android:textColor="@color/deskripsi"
                            android:text="hari"
                            ></TextView>
                        <TextView
                            android:id="@+id/pembayaran_jam"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:textSize="16dp"
                            android:fontFamily="@font/googlesansregular"
                            android:textColor="@color/deskripsi"
                            android:text="jam"

                            ></TextView>
                        <TextView
                            android:id="@+id/hargalay_bayar"
                            android:layout_width="220dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="20dp"
                            android:textSize="16dp"
                            android:contentDescription="@string/harga_layanan"
                            android:text="@string/harga_layanan"
                            android:fontFamily="@font/googlesansregular"
                            android:textColor="@color/deskripsi"
                            ></TextView>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_below="@+id/card_artikel3"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"

                    android:background="@color/background_all">
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="210dp"

                    app:cardElevation="10dp">


                    <TextView
                        android:fontFamily="@font/googlesansbold"
                        android:textSize="18dp"
                        android:textColor="@color/judul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:text="Ringkasan pembayaran"

                        android:textStyle="bold"></TextView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Biaya Layanan"
                            android:fontFamily="@font/googlesansmedium"
                            android:textColor="@color/judul"
                            android:textSize="16dp"
                            ></TextView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="FREE"

                         android:textAlignment="viewEnd"
                            android:fontFamily="@font/googlesansregular"
                            android:textColor="@color/deskripsi"
                            android:textSize="16dp"
                            ></TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/card_artikel3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="100dp"
                        android:background="#C4C4C4">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="120dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Biaya jasa medis"
                            android:fontFamily="@font/googlesansmedium"
                            android:textColor="@color/judul"
                            android:textSize="16dp"
                            ></TextView>
                        <TextView
                            android:id="@+id/biayamedis"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/harga_medis"
                            android:layout_marginLeft="30dp"
                            android:fontFamily="@font/googlesansregular"
                            android:textColor="@color/deskripsi"
                            android:textSize="16dp"
                            android:textAlignment="viewEnd"
                            android:contentDescription="@string/harga_medis"
                            ></TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_below="@+id/card_artikel3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="155dp"
                        android:background="#C4C4C4">
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="165dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        >

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:text="Total pembayaran"
                            android:fontFamily="@font/googlesansmedium"
                            android:textColor="@color/judul"
                            android:textSize="16dp"

                            ></TextView>
                        <TextView
                            android:id="@+id/totalpembayaran"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/harga_pembayaran"
                            android:hint="hargapembayaran"
                            android:contentDescription="null"
                            android:layout_marginLeft="30dp"
                            android:fontFamily="@font/googlesansregular"
                            android:textColor="@color/deskripsi"
                            android:textSize="16dp"
                            android:textAlignment="viewEnd"
                            android:textStyle="bold"
                            ></TextView>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <LinearLayout
                    android:layout_below="@+id/card_artikel3"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"

                    android:background="@color/background_all">
                </LinearLayout>


                <LinearLayout
                    android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/metode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="20dp"
                    android:text="Metode Pembayaran"
                    android:fontFamily="@font/googlesansbold"
                    android:textColor="@color/judul"
                    android:textSize="18sp"
                    android:textStyle="bold">
                </TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:id="@+id/saldo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/googlesansregular"
                        android:gravity="center"
                        android:text="Saldo Halodoc"
                        android:textColor="@color/judul"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/saldo_deskripsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/googlesansregular"
                        android:gravity="center"
                        android:text="Rp 0"
                        android:textColor="#404345"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_baseline_check_circle_disable" />

                </RelativeLayout>

                    <LinearLayout
                        android:layout_below="@+id/card_artikel3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                       android:layout_marginTop="10dp"
                        android:background="#C4C4C4">
                    </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:id="@+id/saldogopay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/googlesansregular"
                        android:gravity="center"
                        android:text="Saldo Gopay"
                        android:textColor="@color/judul"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/gopay_deskripsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/googlesansregular"
                        android:gravity="center"
                        android:text="Rp500.000"
                        android:textColor="@color/judul"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_baseline_check_circle_green" />

                </RelativeLayout>

                    <LinearLayout
                        android:layout_below="@+id/card_artikel3"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="20dp"
                        android:background="#C4C4C4">
                    </LinearLayout>


                    <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:layout_marginBottom="20dp"
                    android:layout_marginTop="24dp">

                    <TextView
                        android:id="@+id/lainya"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/googlesansregular"
                        android:gravity="center"
                        android:text="Pilihan Lainnya"
                        android:textColor="@color/judul"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/lainya_deskripsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="34dp"
                        android:fontFamily="@font/googlesansregular"
                        android:gravity="center"
                        android:text="Kartu kredit / Kartu debit"
                        android:textColor="@color/judul"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_twotone_arrow_forward_ios_24" />

                </RelativeLayout>
                </LinearLayout>



                                <LinearLayout
                    android:layout_below="@+id/card_artikel3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"


                    android:background="#C4C4C4">
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="10dp"
                    android:layout_height="90dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:textSize="18dp"
                        android:fontFamily="@font/googlesansbold"
                        android:textColor="@color/judul"
                        android:layout_marginLeft="10dp"
                        android:text="Total Pembayaran"
                        ></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="90dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/totalpembayaran_fix"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="35dp"
                            android:text="@string/total_pembayaran"
                            android:textSize="18sp"
                            android:fontFamily="@font/googlesansbold"
                            android:textColor="@color/judul"></TextView>

                        <Button
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="18dp"
                            android:background="@drawable/primary_button"
                            android:text="Bayar"
                            android:textSize="18sp"
                            android:fontFamily="@font/googlesansmedium"
                            android:textColor="@color/colorWhite"></Button>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
