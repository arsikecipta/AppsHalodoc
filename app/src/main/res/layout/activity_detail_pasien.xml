<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Detail_pasien">
    <ScrollView
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="20dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="5dp"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/shapetopik"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Janji Layanan"
                        android:layout_margin="10dp"
                        android:textSize="18dp"

                        android:fontFamily="@font/googlesansbold"
                        android:textColor="@color/judul"

                        ></TextView>
                </FrameLayout>

                <LinearLayout
                    android:layout_marginTop="60dp"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="16dp"
                        android:text="Layanan"
                        android:fontFamily="@font/googlesansmedium"
                        android:textColor="@color/judul"

                        ></TextView>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="16dp"
                        android:text="Lokasi"
                        android:fontFamily="@font/googlesansmedium"
                        android:textColor="@color/judul"

                        ></TextView>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="16dp"
                        android:text="Tanggal"
                        android:fontFamily="@font/googlesansmedium"
                        android:textColor="@color/judul"
                        ></TextView>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="16dp"
                        android:text="Waktu"
                        android:fontFamily="@font/googlesansmedium"
                        android:textColor="@color/judul"

                        ></TextView>
                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:textSize="16dp"
                        android:text="Biaya"
                        android:fontFamily="@font/googlesansmedium"
                        android:textColor="@color/judul"
                        ></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="60dp"
                    android:layout_width="10dp"
                    android:layout_height="150dp"

                    android:layout_marginLeft="100dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:text=":"
                        android:layout_marginTop="1dp"
                        android:textStyle="bold"
                        ></TextView>
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:text=":"
                        android:layout_marginTop="10dp"
                        android:textStyle="bold"
                        ></TextView>
                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="20dp"
                        android:text=":"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        ></TextView>

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text=":"
                        android:textStyle="bold"></TextView>


                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text=":"
                        android:textStyle="bold"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="60dp"
                    android:layout_width="230dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="110dp"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:id="@+id/layanan_name_pasien"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:textSize="16dp"
                        android:text="Nama layanan"
                        android:fontFamily="@font/googlesansregular"
                        android:textColor="@color/deskripsi"
                        ></TextView>
                    <TextView
                        android:id="@+id/nama_rs_pasien"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:textSize="16dp"
                        android:fontFamily="@font/googlesansregular"
                        android:textColor="@color/deskripsi"
                        android:text="Nama rs"
                        ></TextView>
                    <TextView
                        android:id="@+id/detail_pasien_hari"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:textSize="16dp"
                        android:fontFamily="@font/googlesansregular"
                        android:textColor="@color/deskripsi"
                        android:text="hari"
                        ></TextView>
                    <TextView
                        android:id="@+id/detail_pasien_jam"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:textSize="16dp"
                        android:fontFamily="@font/googlesansregular"
                        android:textColor="@color/deskripsi"
                        android:text="jam"
                        ></TextView>
                    <TextView
                        android:id="@+id/harga_lay_pasien"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="20dp"
                        android:textSize="16dp"
                        android:text="harga"
                        android:fontFamily="@font/googlesansregular"
                        android:textColor="@color/deskripsi"
                        ></TextView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="530dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                app:cardElevation="10dp"
                android:layout_marginBottom="100dp"
                app:cardCornerRadius="5dp"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@color/shapetopik"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mohon masukan detail sesuai dengan kartu identitas pasien"
                        android:layout_margin="10dp"
                        android:textSize="18dp"
                        android:fontFamily="@font/googlesansbold"
                        android:textColor="@color/judul"
                        ></TextView>
                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="75dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Lengkap"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:fontFamily="@font/googlesansmedium"
                        android:textColor="@color/judul"
                        ></TextView>
                    <EditText
                        android:id="@+id/et_nama_lengkap"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:ems="10"
                        android:background="@drawable/custom_input"
                        android:drawablePadding="12dp"
                        android:layout_marginTop="10dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:fontFamily="@font/googlesansmedium"
                        android:textColor="@color/judul"
                        android:text="Tanggal lahir"
                        ></TextView>
                    <Button
                        android:id="@+id/datepicker_ttl_pasien"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Masukan Tanggal lahir"
                        style="?android:spinnerStyle"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/googlesansregular"
                        android:textColor="@color/deskripsi"
                        android:onClick="openDatePicker"
                        ></Button>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="14dp"
                        android:fontFamily="@font/googlesansmedium"
                        android:textColor="@color/judul"
                        android:text="Unggah kartu identitas (KTP, SIM atau Passport)"
                        ></TextView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_upload"
                        android:layout_width="match_parent"
                        android:layout_height="198dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="2dp"
                        android:layout_weight="1"

                        android:background="@drawable/bg_card_foto">

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/img_foto"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_img_foto"></ImageView>

                            <TextView
                                android:id="@+id/text_foto"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Masukan foto anda disini"
                                android:fontFamily="@font/googlesansregular"
                                android:textColor="@color/deskripsi"
                                android:textSize="14sp"
                                android:textAlignment="center"></TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_marginTop="-70dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/colorWhite"
        >

        <Button
            android:id="@+id/btn_isi_pasien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/primary_button"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textAllCaps="false"
            android:fontFamily="@font/googlesansmedium"
            android:textSize="18sp"
            android:text="Lanjut"
            ></Button>
    </LinearLayout>
</LinearLayout>