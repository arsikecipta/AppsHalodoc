<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_layanan"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#FFFFFF"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageview_layanan"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:src="@drawable/tescovid"
                app:shapeAppearanceOverlay="@style/RoundedSquare"
                app:strokeColor="#eeeeee"
                app:strokeWidth="2dp"></com.google.android.material.imageview.ShapeableImageView>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nama_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Rapid Test"
                    android:textColor="@color/judul"
                    android:textSize="16sp"
                    android:fontFamily="@font/googlesansmedium"
                   ></TextView>

                <TextView
                    android:id="@+id/penjelasan_layanan"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:maxLines="2"
                    android:minLines="1"
                    android:textSize="14sp"
                    android:fontFamily="@font/googlesansregular"
                    android:textColor="@color/deskripsi"
                    android:text="Penjelasan layanan"></TextView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"

                    android:layout_marginLeft="10dp"
                    >

                    <TextView
                        android:id="@+id/judul2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="55dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="Selengkapnya"
                        android:fontFamily="@font/googlesansmedium"
                        android:textColor="@color/background_all"
                        android:textSize="14sp"/>


                    <ImageView
                        android:id="@+id/selanjutnya2"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="8dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_next_pink"
                        ></ImageView>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>