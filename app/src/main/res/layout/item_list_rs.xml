<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview_rs_semua"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#FFFFFF"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/siloam"
                android:scaleType="centerCrop"
                android:id="@+id/imageview_rs"
                android:layout_width="140dp"
                android:layout_height="150dp">
            </ImageView>
            <LinearLayout
                android:layout_weight="1"

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/name_rs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Nama rs"
                    android:fontFamily="@font/googlesansmedium"
                    android:textColor="@color/judul"
                    android:textSize="16sp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/jenis_rs"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/googlesansregular"
                    android:textSize="14sp"
                    android:textColor="@color/deskripsi"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="jenis"></TextView>

                <TextView
                    android:id="@+id/alamat_rs"
                    android:text="alamat rs"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/googlesansregular"
                    android:textSize="14sp"
                    android:textColor="@color/deskripsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
                <Button
                    android:id="@+id/btn_janji_rs"
                    android:minWidth="48dp"
                    android:maxWidth="48dp"
                    android:layout_gravity="right"
                    android:background="@drawable/stroke_button"
                    android:layout_marginTop="15dp"
                    android:contentDescription="null"
                    android:fontFamily="@font/googlesansmedium"
                    android:layout_marginRight="10dp"
                    android:text="@string/txt_btn_buatjanji"
                    android:textSize="14sp"
                    android:importantForAccessibility="no"
                    android:hint="@string/txt_btn_buatjanji"
                  android:textColor="@drawable/button_text_color"
                    android:layout_width="100dp"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"></Button>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>