<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#FFFFFF"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/siloam"
                android:scaleType="centerCrop"
                android:id="@+id/imageview_rs"
                android:layout_width="140dp"
                android:layout_height="160dp">
            </ImageView>
            <LinearLayout
                android:layout_weight="1"

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/name_rs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Nama rs"
                    android:textColor="#000"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/jenis_rs"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="jenis"></TextView>

                <TextView
                    android:id="@+id/alamat_rs"
                    android:text="alamat rs"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></TextView>
                <Button
                    android:id="@+id/btn_janji"
                    android:layout_gravity="right"
                    android:background="@drawable/shape_button_rad"
                    android:layout_marginTop="25dp"
                    android:textSize="12dp"
                    android:layout_marginRight="10dp"
                    android:text="Buat janji"
                    android:textColor="#ffffff"
                    android:layout_width="120dp"
                    android:textAllCaps="false"
                    android:layout_height="35dp"></Button>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>