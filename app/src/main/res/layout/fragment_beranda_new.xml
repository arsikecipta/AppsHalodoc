<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"

        >
        <TextView
            android:id="@+id/masuk_daftar_new"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Masuk/Daftar"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:textStyle="bold"
            ></TextView>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="20dp"
                android:textStyle="bold"
                android:text="Selamat Datang"
                ></TextView>
            <TextView
                android:id="@+id/nama_regis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="0dp"
                android:textStyle="bold"
                android:text="Nama"
                ></TextView>
        </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_chat_dokter"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#FFFFFF"
                >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/cekhealth3"
                        android:scaleType="centerCrop"
                        android:id="@+id/imageview_chat_dokter"
                        android:layout_width="140dp"
                        android:layout_height="120dp">
                    </ImageView>
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/chat_dokter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="Chat Dokter"
                            android:textColor="#000"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/txt_chatdokter"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Yuk konsultasikan kesehatanmu dengan dokter!"></TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="80dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/btn_janji"
                                android:layout_gravity="right"
                                android:text="Selengkapnya"
                                android:layout_width="90dp"
                                android:textColor="@color/background_all"
                                android:textAllCaps="false"
                                android:layout_height="20dp"></TextView>
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="-5dp"
                                android:src="@drawable/ic_next"
                                ></ImageView>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_toko_kesehatan"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#FFFFFF"
                >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/apotek"
                        android:scaleType="centerCrop"
                        android:id="@+id/imageview_tokokesehatan"
                        android:layout_width="140dp"
                        android:layout_height="120dp">
                    </ImageView>
                    <LinearLayout
                        android:layout_weight="1"

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/toko_kesehatan"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="Nama rs"
                            android:textColor="#000"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/jenis_rs"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Kini beli obat gak perlu ribet lagi! "></TextView>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="80dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/selengkapnya"
                                android:layout_gravity="right"
                                android:text="Selengkapnya"
                                android:layout_width="90dp"
                                android:textColor="@color/background_all"
                                android:textAllCaps="false"
                                android:layout_height="20dp"></TextView>
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="-5dp"
                                android:src="@drawable/ic_next"
                                ></ImageView>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_buat_janji_rs"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                app:cardElevation="10dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#FFFFFF"
                >
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/rspindad"
                        android:scaleType="centerCrop"
                        android:id="@+id/imageview_rs"
                        android:layout_width="140dp"
                        android:layout_height="120dp">
                    </ImageView>
                    <LinearLayout
                        android:layout_weight="1"

                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/name_rs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:text="Buat Janji RS"
                            android:textColor="#000"
                            android:textStyle="bold"></TextView>

                        <TextView
                            android:id="@+id/txt_buatjanjirs"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="Buat janji RS mudah dan cepat!"></TextView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginTop="35dp"
                            android:layout_marginLeft="80dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/selengkapnya_buatjanjirs"
                                android:layout_gravity="right"
                                android:text="Selengkapnya"
                                android:textColor="@color/background_all"
                                android:layout_width="90dp"
                                android:textAllCaps="false"
                                android:layout_height="20dp"></TextView>
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="-5dp"
                                android:src="@drawable/ic_next"
                                ></ImageView>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/layanan_lainnya"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/main"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:text="Baca 100++ artikel terbaru"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_lihatsemua_artikel"
                    android:layout_width="100dp"
                    android:layout_height="55dp"
                    android:layout_below="@+id/main"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:backgroundTint="@color/background_all"
                    android:text="lihat semua"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite" />


            </LinearLayout>
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/but_1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/stroke"
                        android:text="Semua"
                        android:textAllCaps="false"
                        android:textColor="@color/background_all"></Button>

                    <Button
                        android:id="@+id/but_2"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="Kecantikan"
                        android:textAllCaps="false"
                        android:background="@drawable/stroke"
                        android:textColor="@color/background_all"></Button>

                    <Button
                        android:id="@+id/but_3"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/stroke"
                        android:text="Makanan Sehat"
                        android:textAllCaps="false"
                        android:textColor="@color/background_all">

                    </Button>

                    <Button
                        android:id="@+id/but_4"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/stroke"
                        android:text="Pola Asuh Anak"
                        android:textAllCaps="false"
                        android:textColor="@color/background_all">

                    </Button>

                    <Button
                        android:id="@+id/but_5"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/stroke"
                        android:text="Parestesia"
                        android:textAllCaps="false"
                        android:textColor="@color/background_all"></Button>
                    <Button
                        android:id="@+id/but_6"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/stroke"
                        android:text="Pertumbuhan Bayi"
                        android:textAllCaps="false"
                        android:textColor="@color/background_all"></Button>
                </LinearLayout>

            </HorizontalScrollView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_artikel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:clipToPadding="false"
                android:foregroundGravity="center"
                android:overScrollMode="never"></androidx.recyclerview.widget.RecyclerView>
            <Button
                android:id="@+id/button_artikel_seeall"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:background="@drawable/shape_button_rad"
                android:textStyle="bold"
                android:text="Lihat semua"
                >
                ></Button>
        </LinearLayout>
    </ScrollView>
</LinearLayout>