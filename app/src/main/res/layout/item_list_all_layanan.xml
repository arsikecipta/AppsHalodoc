<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/all_layanan"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/card_layanan1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="110dp"

        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/gambar_layanan"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/tescovid"
            app:shapeAppearanceOverlay="@style/RoundedSquare"
            app:strokeColor="#eeeeee"
            app:strokeWidth="2dp"></com.google.android.material.imageview.ShapeableImageView>
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="2dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">



            <TextView
                android:id="@+id/layanan_name"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="1"
                android:fontFamily="@font/googlesansmedium"
                android:textColor="@color/judul"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                android:text="Tes Covid-19"></TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/penjelasanLayanan"
                    android:layout_width="170dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"

                    android:fontFamily="@font/googlesansregular"
                    android:textAlignment="textStart"
                    android:layout_marginStart="5dp"
                    android:maxLines="2"
                    android:textColor="@color/deskripsi"
                    android:text="Tes Covid-19 adalah tes untuk mendeteksi virus corona yang menyerang sistem pernapasan"></TextView>

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/ic_next"
                    ></ImageView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@+id/card_artikel3"
        android:layout_width="match_parent"
        android:layout_height="2dp"

        android:background="#C4C4C4">
    </LinearLayout>

</LinearLayout>