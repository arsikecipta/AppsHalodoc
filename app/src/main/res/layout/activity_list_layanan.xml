<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ListLayanan">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/shapetopik"
            >
            <TextView
                android:id="@+id/nama_gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/googlesansbold"
                android:textColor="@color/judul"
                android:textSize="18dp"
                android:visibility="gone"
                android:text="Rekomendasi RS"/>
            <TextView
                android:id="@+id/nama_layananrs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="layanan"
                android:layout_margin="10dp"
                android:textSize="18dp"
                android:fontFamily="@font/googlesansbold"
                android:textColor="@color/judul"
                ></TextView>

        </FrameLayout>
        <TextView
            android:id="@+id/txt_penjelasanlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="layanan"
            android:fontFamily="@font/googlesansregular"
            android:textColor="@color/deskripsi"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="60dp"
            android:textSize="16dp"
            ></TextView>
    </androidx.cardview.widget.CardView>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_list_layanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        ></androidx.recyclerview.widget.RecyclerView>

</LinearLayout>