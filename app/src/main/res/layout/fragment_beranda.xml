<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="60dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:id="@+id/icon_daftar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_acc"
            ></ImageView>
        <TextView
            android:id="@+id/masuk_daftar"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Masuk/Daftar"
            android:fontFamily="@font/googlesansmedium"
            android:textSize="20dp"
            android:textColor="@color/background_all"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="10dp"

            ></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="18sp"
    android:layout_margin="20dp"
    android:fontFamily="@font/googlesansmedium"
    android:textColor="@color/judul"
    android:text="Silahkan Masuk/Daftar"
    ></TextView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_chat_dokter"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#FFFFFF"
        >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/cekhealth3"
                android:scaleType="centerCrop"
                android:id="@+id/imageview_chat_dokter"
                android:layout_width="140dp"
                android:layout_height="120dp">
            </ImageView>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/chat_dokter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Chat Dengan Dokter"
                    android:fontFamily="@font/googlesansmedium"
                    android:textColor="@color/judul"
                    android:textSize="16sp"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/txt_chatdokter"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/deskripsi"
                    android:fontFamily="@font/googlesansregular"
                    android:textSize="14sp"
                    android:text="Sakit? jangan asal cari solusi.. \nyuk tanya ke ahlinya!">
                </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="80dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/btn_janji"
                    android:layout_gravity="right"
                    android:text="Selengkapnya"
                    android:layout_width="95dp"
                    android:textColor="@color/background_all"
                    android:textAllCaps="false"
                    android:fontFamily="@font/googlesansmedium"
                    android:layout_height="20dp"></TextView>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="-5dp"
                    android:src="@drawable/ic_next"
                    ></ImageView>

            </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_toko_kesehatan"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#FFFFFF"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/apotek"
                    android:scaleType="centerCrop"
                    android:id="@+id/imageview_tokokesehatan"
                    android:layout_width="140dp"
                    android:layout_height="120dp">
                </ImageView>
                <LinearLayout
                    android:layout_weight="1"

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/toko_kesehatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/googlesansmedium"
                        android:textColor="@color/judul"
                        android:textSize="16sp"
                        android:text="Toko Kesehatan"
                        android:textStyle="bold">
                    </TextView>

                    <TextView
                        android:id="@+id/jenis_rs"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/deskripsi"
                        android:fontFamily="@font/googlesansregular"
                        android:textSize="14sp"
                        android:text="Kini beli obat gak perlu ribet lagi! ">
                    </TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="25dp"
                        android:layout_marginLeft="80dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/selengkapnya"
                            android:layout_gravity="right"
                            android:text="Selengkapnya"
                            android:layout_width="95dp"
                            android:fontFamily="@font/googlesansmedium"
                            android:textColor="@color/background_all"
                            android:textAllCaps="false"
                            android:layout_height="20dp"></TextView>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="-5dp"
                            android:src="@drawable/ic_next"
                            ></ImageView>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_buat_janji_rs"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#FFFFFF"
            >
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/rspindad"
                    android:scaleType="centerCrop"
                    android:id="@+id/imageview_rs"
                    android:layout_width="140dp"
                    android:layout_height="120dp">
                </ImageView>
                <LinearLayout
                    android:layout_weight="1"

                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/name_rs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:text="Buat Janji RS"
                        android:fontFamily="@font/googlesansmedium"
                        android:textColor="@color/judul"
                        android:textSize="16sp"
                        android:textStyle="bold"></TextView>

                    <TextView
                        android:id="@+id/txt_buatjanjirs"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/deskripsi"
                        android:fontFamily="@font/googlesansregular"
                        android:textSize="14sp"

                        android:text="Buat janji RS mudah dan cepat!"></TextView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginTop="35dp"
                        android:layout_marginLeft="80dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/selengkapnya_buatjanjirs"
                            android:layout_gravity="right"
                            android:text="Selengkapnya"
                            android:textColor="@color/background_all"
                            android:layout_width="95dp"
                            android:fontFamily="@font/googlesansmedium"
                            android:textAllCaps="false"
                            android:layout_height="20dp"></TextView>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginTop="-5dp"
                            android:src="@drawable/ic_next"
                            ></ImageView>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/layanan_lainnya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Baca 100++ artikel terbaru"
                android:textSize="18dp"
                android:fontFamily="@font/googlesansmedium"
                android:textColor="@color/judul"
                android:textStyle="bold" />



        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <Button
                    android:id="@+id/but_1"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/stroke"
                    android:text="Semua"
                    android:fontFamily="@font/googlesansmedium"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textColor="@color/background_all"></Button>

                <Button
                    android:id="@+id/but_2"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Kecantikan"
                    android:fontFamily="@font/googlesansmedium"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:background="@drawable/stroke"
                    android:textColor="@color/background_all"></Button>

                <Button
                    android:id="@+id/but_3"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/stroke"
                    android:text="Makanan Sehat"
                    android:textAllCaps="false"
                    android:fontFamily="@font/googlesansmedium"
                    android:textSize="14sp"
                    android:textColor="@color/background_all">

                </Button>

                <Button
                    android:id="@+id/but_4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/stroke"
                    android:text="Pola Asuh Anak"
                    android:fontFamily="@font/googlesansmedium"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textColor="@color/background_all">

                </Button>

                <Button
                    android:id="@+id/but_5"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/stroke"
                    android:text="Parestesia"
                    android:fontFamily="@font/googlesansmedium"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textColor="@color/background_all"></Button>
                <Button
                    android:id="@+id/but_6"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/googlesansmedium"
                    android:textSize="14sp"
                    android:background="@drawable/stroke"
                    android:text="Pertumbuhan Bayi"
                    android:textAllCaps="false"
                    android:textColor="@color/background_all"></Button>
            </LinearLayout>

        </HorizontalScrollView>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_artikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:clipToPadding="false"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:foregroundGravity="center"
            android:overScrollMode="never"></androidx.recyclerview.widget.RecyclerView>
        <Button
            android:id="@+id/button_artikel_seeall"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textSize="18sp"
            android:background="@drawable/primary_button"
            android:fontFamily="@font/googlesansmedium"
            android:textAllCaps="false"
            android:textColor="@android:color/background_light"

            android:text="Lihat semua"
            >
            ></Button>
    </LinearLayout>
    </ScrollView>
</LinearLayout>