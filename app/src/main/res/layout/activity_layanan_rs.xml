<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    tools:context=".Layanan_rs">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/foto_rs"
            android:layout_width="410dp"
            android:layout_height="200dp"
            android:background="#2d2d2d"
            android:scaleType="centerCrop"
            ></ImageView>


        <TextView
            android:id="@+id/nama_rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:textColor="@color/judul"
            android:fontFamily="@font/googlesansbold"
            android:text="@string/nama_rumah_sakit"
            android:contentDescription="@string/nama_rumah_sakit"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/jenisrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:layout_marginTop="5dp"
            android:text="Jenis"
            android:textColor="@color/deskripsi"
            android:fontFamily="@font/googlesansmedium"
            android:textSize="16sp"

            />
        <TextView
            android:id="@+id/info_rs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:text="Info RS"
            android:textColor="@color/deskripsi"
            android:fontFamily="@font/googlesansregular"
            android:textSize="14sp"
            />
        <LinearLayout
            android:layout_below="@+id/card_artikel3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/color4">
        </LinearLayout>
        <TextView
            android:id="@+id/alamatrstxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:text="Alamat"
            android:textColor="@color/judul"
            android:fontFamily="@font/googlesansbold"
            android:textSize="18sp"

            />
        <TextView
            android:id="@+id/alamatrs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:text="Alamat Rs"
            android:textColor="@color/deskripsi"
            android:fontFamily="@font/googlesansregular"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/nama_gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:text="Alamat Rs"
            android:textColor="@color/deskripsi"
            android:fontFamily="@font/googlesansregular"
            android:textSize="16sp"
            android:visibility="gone"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
         >

            <Button
                android:layout_width="150dp"
                android:text="Telepon rs"
                android:textColor="@color/background_all"
                android:layout_marginLeft="10dp"
                android:minWidth="48dp"
                android:minHeight="48dp"
            android:layout_marginTop="5dp"
                android:textAllCaps="false"
                android:fontFamily="@font/googlesansmedium"
                android:background="@drawable/stroke_button"
                android:layout_height="wrap_content"></Button>

            <Button
                android:id="@+id/selanjutnya"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="Lokasi"
                android:textAllCaps="false"
                android:background="@drawable/stroke_button"
                android:textColor="@color/background_all"
                android:layout_marginBottom="8dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_next"
                ></Button>

        </RelativeLayout>
        <LinearLayout
            android:layout_below="@+id/card_artikel3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/color4">
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_margin="20dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="5dp"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/shapetopik"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilihan Layanan"
                    android:layout_margin="10dp"
                    android:textSize="18dp"
                    android:fontFamily="@font/googlesansbold"
                    android:textColor="@color/judul"

                    ></TextView>

            </FrameLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="60dp"
                android:layout_marginRight="15dp"
                app:cardCornerRadius="5dp"
                app:cardBackgroundColor="#F5F5F5">


            <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_search2"></ImageView>

                <TextView

                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="38dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/googlesansregular"
                    android:text="Cari nama RS, dokter, spesialisasi, tindakan"
                    android:textSize="12dp"></TextView>



            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_layanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="120dp"
                >
            </androidx.recyclerview.widget.RecyclerView>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>