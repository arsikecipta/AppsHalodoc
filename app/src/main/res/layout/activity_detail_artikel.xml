<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_artikel_detail"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/kecantikan"

        ></ImageView>
    <TextView
        android:id="@+id/judul_artikel_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_gravity="left"
        android:text="Judul Artikel"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/artikel_topik_detail"
        android:layout_width="120dp"
        android:layout_height="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape_topik"
        android:paddingTop="4dp"
        android:text="Topik artikel"
        android:textSize="13dp"
        android:textAlignment="center"
        android:textColor="#325288"></TextView>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/penulis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left"
            android:text="Ditinjau oleh : "
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/nama_dokter_penulis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="left"
            android:text="Nama dokter "
            android:textSize="15sp"
            android:textColor="@color/background_all"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/tgl_artikel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginLeft="20dp"
        android:layout_gravity="left"
        android:text="25 Mei 2021"
        android:textSize="15sp"
        />

</LinearLayout>